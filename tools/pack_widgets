#!/usr/bin/perl
$xml=$ARGV[0];
open(IN, "< $xml") || die("pack_widgets: couldn't open file $xml");

my $id;
my @current_widget;


sub format_html_blob
{
    my ($s) = @_;
    # remove newlines.
    $s =~ s|\n||mg;
    # squish leading/trailing spaces
    $s =~ s|^[ \n\t]*||;
    $s =~ s|[ \n\t]*$||;
    # squish space between tags
    $s =~ s|>[ \n\t]*<|><|g;
    # squish even more spaces =P
    $s =~ s|>[ \n\t]*|>|g;
    $s =~ s|[ \n\t]*<|<|g;
    return $s;
}

sub dump_widget
{
    my ($last) = @_;
    return if ($id eq "");
    print "      '$id' : '";
    print format_html_blob(join('', @current_widget));
    print "'";
    print "," if ($last eq "");
    print "\n";
    @current_widget = ();
}

sub dump_widgets
{
    foreach my $s (<IN>)
    {
	if ($s =~ m|<widget name="([^"]*)"[^>]*>|)
	{
	    dump_widget("");  # previous widget
	    $id = $1;
	}
	if ($s =~ m|<widgets *>|   ||
	    $s =~ m|</widgets *>|  )
	{ next; }
	push(@current_widget, $s);
    }
    dump_widget("last");
}

print("    /* layout for each widget (generated from $xml). */\n");
print("    var widgets_layout = {\n");
dump_widgets();
print("    };\n\n");
